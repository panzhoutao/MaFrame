<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/detailed_title">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/detailed_ic"
                    android:layout_marginLeft="13dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="督办内容 : "
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13dp"/>
                <TextView
                    android:id="@+id/detailed_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题"
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/line"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发  现  人 : "
                        android:textSize="15sp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/detailed_find_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李四"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/green"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整改部门 : "
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="13dp"/>
                    <TextView
                        android:id="@+id/detailed_dept_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="沈阳车务段->安全科"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整  改  人 : "
                        android:textSize="15sp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:id="@+id/detailed_zr_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整改人"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginLeft="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整改情况 : "
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="13dp"/>
                    <TextView
                        android:id="@+id/detailed_rectification"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="整改要求"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_margin="1px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状        态 : "
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="13dp"/>
                    <TextView
                        android:id="@+id/detailed_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="采纳"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/green"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
