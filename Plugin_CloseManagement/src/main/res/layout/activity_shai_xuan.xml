<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <include layout="@layout/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="21dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="筛选"
                android:layout_gravity="center_vertical"
                android:textColor="#2261a2"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="16dp"
            android:text="责任部门"
            android:textColor="#353535"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/btn_depart"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_bg_detail"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_depart_tv"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="全部分类"
                android:paddingLeft="9dp"
                android:paddingRight="5dp"
                android:textColor="#666666"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_select"
                android:scaleType="fitCenter"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="16dp"
            android:text="整改状态"
            android:textColor="#353535"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/btn_status"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_bg_detail" >

            <TextView
                android:id="@+id/btn_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_centerVertical="true"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="待评价"
                android:paddingLeft="9dp"
                android:paddingRight="5dp"
                android:textColor="#666666"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_select"
                android:scaleType="fitCenter"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/btn_shaixuan"
            android:layout_width="220dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/btn_select1"/>


    </LinearLayout>

</LinearLayout>